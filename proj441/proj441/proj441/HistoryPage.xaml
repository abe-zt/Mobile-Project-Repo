<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proj441.HistoryPage"
             Title="History">
    <ContentPage.Content>
        <Grid
            Padding="0"
            RowSpacing="0"
            ColumnSpacing="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Image 
                Grid.Row="0"
                Grid.Column="0"
                Grid.RowSpan="2"
                Source="doodlepills3.png"
                Aspect="AspectFill"/>
       
            <Frame
                Grid.Row="0"

                Margin="15, 15, 15, 0"
                Padding="5"
                CornerRadius="10"
                BorderColor="{StaticResource MainColor}"
                BackgroundColor="#F5F5F5">

                <ListView
                    Margin="0"
                    BackgroundColor="#F5F5F5"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    Grid.Row="1" 
                    x:Name = "MyHistoryList"
                    HasUnevenRows="True"
                    SelectionMode="Single" 
                    ItemSelected="MyHistoryList_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.ContextActions>
                                    
                                    <MenuItem
                                       Text="Delete"
                                       CommandParameter="{Binding .}"
                                       Clicked="Handle_ContextMenuDeleteButton"
                                       IsDestructive="True"/>
                                </ViewCell.ContextActions>
                                <ViewCell.View>
                                    <StackLayout>
                                        <StackLayout
                                            Orientation="Horizontal"
                                            Spacing="2">
                                            <Label 
                                                
                                                FontSize="Large"
                                                TextColor="Blue"
                                                Text=" ( "/>
                                            <Label 
                                                x:Name="quantityLabel"
                                                FontSize="Large"
                                                FontAttributes="Bold"
                                                TextColor="Blue"
                                                Text="{Binding QuantityTaken}"/>
                                            <Label 
                                                
                                                FontSize="Large"
                                                TextColor="Blue"
                                                Text=" ) "/>
                                            <Label
                                                FontSize="Large"
                                                Text="{Binding PrescriptionTaken.Name}" />
                                        </StackLayout>
                                        
                                        <Label
                                            x:Name="dateTimeLabel"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="{Binding DateTimeTaken}"/>
                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Frame>

            <StackLayout
                Padding="10, 20, 10, 20"
                Grid.Row="1">
                <Button
                    Style="{StaticResource MainButtonStyle}" 
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="EndAndExpand"
                    x:Name="LogDosageButton2"
                    Text="LOG A DOSAGE"
                    Clicked="LogDosageButton2_Clicked">
                </Button>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>